
  <script type="text/javascript">
    function myfunction()
    {
      $(document).ready(function(){
        $(".register").click(function(){
            $("#log").hide();
            $("#forget").hide();
            $("#otp").hide();
            $("#reg").show();
            
        });
        $(".login").click(function(){
                $("#log").show();
                $("#forget").hide();
                $("#otp").hide();
                 $("#reg").hide();
              });
      });
      $(".forget").click(function(){
            $("#log").hide();
            $("#reg").hide();
            $("#otp").hide();
            $("#forget").show();
            
        });
      $(".otp").click(function(){
            $("#log").hide();
            $("#reg").hide();
            $("#forget").hide();
            $("#otp").show();
        });
    }

  </script>
